@import "../movie_template/movie.wxss";

.celebrity_container {
  display: flex;
  flex-direction: column;
  background-color: #d9d9d9;
}

.infoBgImg {
  width: 100%;
  height: 350rpx;
}

.info_bg_img {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(5px); /*模糊图片*/
}

.name {
  position: absolute;
  top: 90rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
}

.info_img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx auto;
}

.info_container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  margin-bottom: 2rpx;
  background-color: #fff;
}

.info_container > .title {
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0;
}

.works {
  padding-bottom: 80rpx;
}

.works > .title {
  margin-bottom: 40rpx;
}

.horizontal {
  margin: 6rpx 0;
}

.horizontal > .left {
  font-size: 26rpx;
  color: #999;
}

.horizontal > .right {
  font-size: 26rpx;
  color: #666;
  margin-left: 20rpx;
}

.scroll_view_c {
  white-space: nowrap;
}

.scroll_single {
  display: inline-flex;
  flex-direction: column;
  white-space: normal;
}

.loading_container {
  display: flex;
  justify-content: center;
  margin-bottom: 80rpx;
}

.loading_container >image {
  width: 80px;
  height: 60px;
}
