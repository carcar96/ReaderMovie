@import "../stars_template/stars.wxss";

.movie_detail_container {
  display: flex;
  flex-direction: column;
  background-color: #ccc;
}

.movieBg_container {
  width: 100%;
  height: 320rpx;
}

.bgImg {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(10px); /*模糊图片*/
}

.coverImg {
  width: 160rpx;
  height: 220rpx;
  position: absolute;
  right: 36rpx;
  top: 150rpx;
}

.bg_word {
  position: absolute;
  left: 40rpx;
  top: 70rpx;
  color: #fff;
}

.bg_word > .bg_title {
  font-size: 19px;
  font-weight: 600;
  letter-spacing: 4rpx;
}

.bg_word > .bg_year {
  font-size: 28rpx;
  margin: 40rpx 0 50rpx 0;
}

.bg_num {
  font-size: 24rpx;
}

.number {
  color: red;
}

.staic {
  color: #bbb;
  margin: 0 20rpx;
}

.info_container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  font-size: 24rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
}

.movie_title {
  color: #333;
  font-weight: 600;
  margin: 20rpx 0;
  font-size: 32rpx;
}

.tepl_container {
  margin: 15rpx 0;
  flex-direction: row;
  display: flex
}

 .special {
  height: 20rpx;
} 

.tepl_container > .score_left {
  color: #a9a9a9;
  float: left;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.tepl_container > .left {
  color: #a9a9a9;
}

.tepl_container > .right {
  color: #777;
  margin-left: 20rpx;
}

.detail_content {
  margin-bottom: 30rpx;
  color: #a9a9a9;
  font-size: 30rpx;
}

.info_container > p {
  color: #666;
  letter-spacing: 4rpx;
  line-height: 44rpx;
  text-indent: 1em;
  display: block;
  font-size: 26rpx;
}

.photo_container {
  flex-direction: column;
  float: left;
  display: flex;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.photo_container > image {
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 14rpx;
}

.photo_container > text {
  text-align: center;
}

.cast {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.cast_p {
  font-size: 30rpx;
  color: #bbb;
  margin-bottom: 40rpx;
}

.scroll_view_c {
  white-space: nowrap;
}

.cast_container {
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 30rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast_img {
  width: 160rpx;
  height: 220rpx;
  margin: 0 auto;
}

.cast_name {
  font-size: 24rpx;
  margin: 10rpx auto 0;
  word-break: break-all;
}
